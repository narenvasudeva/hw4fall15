!!!
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    #main
      - if !@current_user
        = button_to 'Sign up/Login', login_path, :method => :get, :id => 'login'
      - else
        #notice.flash_message= session[:user_logged]
        = button_to 'Log Out', logout_path, :method => :delete, :id => 'logout'

      - if flash[:notice]
        #notice.flash_message= flash[:notice]
      - elsif flash[:warning]
        #warning.flash_message= flash[:warning]
      = yield
